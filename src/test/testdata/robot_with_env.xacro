<?xml version="1.0"?>
<robot name="test_robot_with_env" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- Properties using environment variables -->
  <xacro:property name="robot_color" value="$(optenv ROBOT_COLOR 0.5 0.5 0.5 1.0)"/>
  <xacro:property name="robot_prefix" value="$(env ROBOT_PREFIX)"/>
  
  <!-- Base link using environment variable values -->
  <link name="${robot_prefix}_base_link">
    <visual>
      <geometry>
        <box size="0.5 0.5 0.1"/>
      </geometry>
      <material name="base_material">
        <color rgba="${robot_color}"/>
      </material>
    </visual>
  </link>
  
  <link name="${robot_prefix}_sensor">
    <visual>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="sensor_material">
        <color rgba="0.2 0.8 0.2 1.0"/>
      </material>
    </visual>
  </link>
  
  <joint name="sensor_joint" type="fixed">
    <parent link="${robot_prefix}_base_link"/>
    <child link="${robot_prefix}_sensor"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
  </joint>
  
</robot>
